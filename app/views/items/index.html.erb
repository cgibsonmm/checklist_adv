<% if signed_in? %>
  <div class="col-md-6 col-md-offset-3">
    <% @items.each do |item| %>
    <div class="well">
        <% if item.completed? %>
          <div class="row item">
            <div class="col-md-8">
              <h2 style="opacity: 0.5;">
                <strike><%= link_to item.title, item_path(item) %></strike>
              </h2>
              <p style="opacity: 0.5;"><%= item.description %></p>
              <p style="opacity: 0.5">
                Completed <%= time_ago_in_words(item.completed_at) %>
              </p>
            </div>

            <div class="col-md-2">
              <a href="#"><i class="fa fa-lg fa-check"></i></a>
            </div>

            <div class="col-md-2">
              <%= link_to item_path(item), method: :delete  do %>
                <i class="fa fa-lg fa-trash"></i>
              <% end  %>
            </div>
          </div>
        <% else %>
          <div class="row item">
            <div class="col-md-8">
              <h2><%= link_to item.title, item_path(item) %></h2>
              <p><%= item.description %></p>
              <p>
                Created <%= time_ago_in_words(item.created_at) %>
              </p>
            </div>

            <div class="col-md-2">
              <p><%= link_to complete_item_path(item), method: :patch do %>
                <i class="fa fa-lg fa-check"></i></p>
              <% end %>
            </div>

            <div class="col-md-2">
              <p><%= link_to item_path(item), method: :delete  do %>
                <i class="fa fa-lg fa-trash"></i></p>
              <% end  %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>        
<% else %>
    <%= render 'parts/static_landing_page' %>
  </div>
<% end %>
